<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bob.sm.mapper.SystemUserResourceMapper">

    <select id="joinSelectList" resultType="com.bob.sm.domain.SystemUserResource">
        ${queryMain} ${ew.customSqlSegment}
    </select>

    <select id="joinSelectPage" resultType="com.bob.sm.domain.SystemUserResource">
        ${queryMain} ${ew.customSqlSegment}
    </select>

    <select id="joinSelectCount" resultType="int">
        ${queryMain} ${ew.customSqlSegment}
    </select>

    <update id="systemUserIdCascadeToNull">
        UPDATE system_user_resource SET system_user_id = null WHERE system_user_id = #{systemUserId}
    </update>

    <update id="systemResourceIdCascadeToNull">
        UPDATE system_user_resource SET system_resource_id = null WHERE system_resource_id = #{systemResourceId}
    </update>

</mapper>